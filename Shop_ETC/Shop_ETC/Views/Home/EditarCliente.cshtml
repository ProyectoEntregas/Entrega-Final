@model IEnumerable<Shop_ETC.Models.selecciondeProduct_Result>
@{
    ViewBag.Title = "EditarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />


</head>
<body>
    
    <br /><br />
    <div>

        @foreach (var item in Model)
        {
            <div class="form-group">
                <form action="@Url.Content("~/Home/ActualizarCarroCliente")" method="post">
                    <input type="text" readonly value="@Html.DisplayFor(modelItem => item.idVenta)" name="txtidVenta" /><br />
                    <input type="text" readonly name="NombreProduct" value="@Html.DisplayFor(modelItem => item.nombreProducto)"></input><br />

                    <label> @Html.DisplayFor(modelItem => item.cantidad)</label><br />
                    <input type="text" name="txtcantidad" placeholder="Ingrese la cantidad" /><br />

                    <label> @Html.DisplayFor(modelItem => item.precio)</label><br />
                    <label> @Html.DisplayFor(modelItem => item.descripcion)</label><br />
                    <input type="submit" value="Actualizar carrito" class="btn btn-success" />
                </form>
            </div>
        }


    </div><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

</body>
</html>



