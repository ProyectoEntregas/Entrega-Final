        margin-top: 1em;
    }

        .form-box input {
            padding: 10px 0;
            margin-bottom: 30px;
            width: 100%;
            outline: none;
            border: none;
            border-bottom: 2px solid #000;
            padding: 5px 5px;
            padding-bottom: -5px;
            padding-top: 20px;
            font-size: 17px;
            font-weight: bold;
        }

            .form-box input[type="submit"] {
                border-bottom: 3px solid rgb(102, 157, 219);
                border-radius: 25px;
                width: 200px;
                background: rgb(102, 157, 219);
                cursor: pointer;
            }

        .form-box form div {
            position: relative;
        }

            .form-box form div label {
                position: absolute;
                top: 10px;
                left: 5px;
                pointer-events: none;
                transition: 0.5s;
                font-size: 17px;
                color: rgb(78, 78, 86);
            }

        .form-box input:focus ~ label,
        .form-box input:valid ~ label {
            top: 0.12px;
            color: rgb(102, 157, 219);
            font-weight: bold;
        }

        .form-box input:focus,
        .form-box input:valid {
            border-bottom: 2px solid rgb(102, 157, 219);
        }
</style>
