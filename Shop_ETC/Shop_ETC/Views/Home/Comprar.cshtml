    <div style="margin-top:3em;">
        <h2 style="text-align:center;">A SOLO UN PASO DE FINALIZAR TU COMPRA!!</h2>
        <div class="containeer">
            <div class="tablaa">
                <table class="table table-dark">
                    <tr>
                        <th>
                            Monto a Pagar
                        </th>
                    </tr>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto)
                            </td>
                            <td>
                                @Html.ActionLink("Finalizar Compra", "Editar") |
                            </td>
                        </tr>
                    }
                </table><br />
            </div>
            <div class="formu">
                <form class="vista">
                    <h4>FORMULARIO DE COMPRA</h4>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-user"></i>
                        </div>
                        <input type="text" placeholder="Nombre completo" minlength="4" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="far fa-credit-card"></i>
                        </div>
                        <input type="text" placeholder="Numero de tarjeta" minlength="10" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="far fa-id-badge"></i>
                        </div>
                        <input type="text" placeholder="CVC" minlength="3" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-table"></i>
                        </div>
                        <input type="date" placeholder="Fecha de vencimineto" minlength="4" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-lock"></i>
                        </div>
                        <input type="password" placeholder="Contraseña" minlength="4" required />
                    </div>
                    <div>
                        <input type="checkbox" value="res" name="ckeck" />
                        <label for="check">Recordar tarjeta</label>
                    </div>
                    <div>
                        <input type="submit" value="Enviar" class="btn btn-primary" style="border-radius:29px; width: 150px;" />
                    </div>
                </form>
            </div>
        </div>
    </div><br /><br /><br />
