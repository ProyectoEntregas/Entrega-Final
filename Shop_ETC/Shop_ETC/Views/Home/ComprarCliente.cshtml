@model IEnumerable<Shop_ETC.Models.MontoTotalPagar_Result>
@{
    ViewBag.Title = "ComprarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <title>Finalizar Compra</title>
</head>
<style>
    body {
    }

    .containeer {
        display: grid;
        grid-template: "tabla formu"auto/ 50% 50%;
        margin-top: 1em;
    }

    .tablaa {
        grid-area: tabla;
        width: 80%;
        margin: auto;
    }

    .formu {
        grid-area: formu;
        width: 70%;
        margin: auto;
    }

    input {
        border: none;
        font-size: 18px;
        outline: none;
        background: none;
    }

    .inputt {
        display: grid;
        grid-template-columns: 35px auto;
        column-gap: 2px;
        border: 1px solid gray;
        border-radius: 29px;
        width: 70%;
        padding: 4px 0;
        margin: 1em 0;
    }

    .vista {
        border-radius: 10px;
        box-shadow: 4px 4px 4px rgba(0,0,0,0.6);
        border: 1px solid gray;
        padding: 15px;
        text-align: center;
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        align-items: center;
    }
</style>
<body>
    
    <div style="margin-top:3em;">
        <h2 style="text-align:center;">A SOLO UN PASO DE FINALIZAR TU COMPRA!!</h2>
        <div class="containeer">
            <div class="tablaa">
                <table class="table table-dark">
                    <tr>
                        <th>
                            Monto a Pagar
                        </th>
                    </tr>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto)
                            </td>
                            <td>
                                @Html.ActionLink("Finalizar Compra", "FinalCliente") |
                            </td>
                        </tr>
                    }
                </table><br />
            </div>
            <div class="formu">
                <form class="vista">
                    <h4>FORMULARIO DE COMPRA</h4>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-user"></i>
                        </div>
                        <input type="text" placeholder="Nombre completo" minlength="4" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="far fa-credit-card"></i>
                        </div>
                        <input type="text" placeholder="Numero de tarjeta" minlength="10" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="far fa-id-badge"></i>
                        </div>
                        <input type="text" placeholder="CVC" minlength="3" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-table"></i>
                        </div>
                        <input type="date" placeholder="Fecha de vencimineto" minlength="4" required />
                    </div>
                    <div class="inputt">
                        <div style="display:flex; justify-content:center; align-items:center;">
                            <i class="fas fa-lock"></i>
                        </div>
                        <input type="password" placeholder="Contraseña" minlength="4" required />
                    </div>
                    <div>
                        <input type="checkbox" value="res" name="ckeck" />
                        <label for="check">Recordar tarjeta</label>
                    </div>
                    <div>
                        <input type="submit" value="Enviar" class="btn btn-primary" style="border-radius:29px; width: 150px;" />
                    </div>
                </form>
            </div>
        </div>
    </div><br /><br /><br />
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

</body>
</html>

