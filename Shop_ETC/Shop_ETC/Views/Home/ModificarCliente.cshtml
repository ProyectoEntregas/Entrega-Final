@model IEnumerable<Shop_ETC.Models.Perfil_Result>
@{
    ViewBag.Title = "ModificarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil Cliente  ViewBag.Nombre</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

</head>
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    .conteent {
        margin-top: 2em;
        text-align: center;
        display: flex;
        justify-content: center;
        flex-flow: column nowrap;
        align-items: center;
    }

    .form-box {
        width: 40%;
        padding: 20px;
        border: 1px solid gray;
        border-radius: 15px;
        box-shadow: 5px 5px 5px rgba(0,0,0,0.6);
        margin-top: 1em;
    }

        .form-box input {
            padding: 10px 0;
            margin-bottom: 30px;
            width: 100%;
            outline: none;
            border: none;
            border-bottom: 2px solid #000;
            padding: 5px 5px;
            padding-bottom: -5px;
            padding-top: 20px;
            font-size: 17px;
            font-weight: bold;
        }

            .form-box input[type="submit"] {
                border-bottom: 3px solid rgb(102, 157, 219);
                border-radius: 25px;
                width: 200px;
                background: rgb(102, 157, 219);
                cursor: pointer;
            }

        .form-box form div {
            position: relative;
        }

            .form-box form div label {
                position: absolute;
                top: 10px;
                left: 5px;
                pointer-events: none;
                transition: 0.5s;
                font-size: 17px;
                color: rgb(78, 78, 86);
            }

        .form-box input:focus ~ label,
        .form-box input:valid ~ label {
            top: 0.12px;
            color: rgb(102, 157, 219);
            font-weight: bold;
        }

        .form-box input:focus,
        .form-box input:valid {
            border-bottom: 2px solid rgb(102, 157, 219);
        }
</style>
<body>

    <div>
        @foreach (var item in Model)
        {
            
                <div class="conteent" >
                    <h2>Actualize su Perfil</h2><br />
                    @ViewBag.Repues
                    <div class="form-box">
                        <header>
                            <img src="data:image/png;base64," />
                        </header>
                        <form action="@Url.Content("~/Home/PerfilModificar")" method="post">
                            <div class="div">
                                <input type="text" name="nombre" value="@Html.DisplayFor(modelItem => item.NombresUsuario)">
                                <label for="">Nombre completo</label>
                            </div>
                            <div class="div">
                                <input type="text" name="nombreUser" value="@Html.DisplayFor(modelItem => item.Nickusuario)" >
                                <label for="">Nombre de usuario</label>
                            </div>
                            <div class="div">
                                <input type="date" name="fecha" value="@Html.DisplayFor(modelItem => item.Fecha_nacimiento)">
                                <label for="">Fecha de nacimiento</label>
                            </div>
                            <div style="text-align:center;">
                                <span style="font-size:18px; color:#000;">Seleccione su genero:</span>
                                <select name="sexo" required style="border-radius: 26px; border: 1px solid rgb(102, 157, 219); padding:3px 7px; font-size:18px; outline:none;">
                                    <option value="">@Html.DisplayFor(modelItem => item.Genero)</option>
                                    <option value="M">M</option>
                                    <option value="F">F</option>
                                </select>
                            </div>
                            <div class="div">
                                <input type="email" name="correo" value="@Html.DisplayFor(modelItem => item.email)">
                                <label for="">Correro</label>
                            </div>
                            <div class="div">
                                <input type="text" name="dirreccion" value="@Html.DisplayFor(modelItem => item.Direccion)">
                                <label for="">Direccion</label>
                            </div>
                            <div class="div">
                                <input type="text" name="telefono" value="@Html.DisplayFor(modelItem => item.Telefono)">
                                <label for="">Telefono</label>
                            </div>
                            <div class="">
                                <input type="submit" value="Guardar" class="btn btn-success">
                            </div>
                        </form>
                    </div>
                    <div>
                        @Html.ActionLink("Cancelar", "PerfilCliente")
                    </div>
                </div>
        }
    </div>


    <br />
    <br />


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

</body>
</html>



