@model IEnumerable<Shop_ETC.Models.Productos>

@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productos</title>
   
</head>
<body>
        <p>
            @Html.ActionLink("Nuevo Producto", "Create")
        </p>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio_venta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Imagen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                       Categoria
                    </th>
                    <th>
                        Proveedor
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio_venta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Imagen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorias.NombreCate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor.NombreProveedor)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Idproducto }) |
                        @Html.ActionLink("Detalle", "Details", new { id = item.Idproducto }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Idproducto })
                    </td>
                </tr>
            }

        </table>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
  
</body>
</html>
