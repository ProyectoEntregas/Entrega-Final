@model IEnumerable<Shop_ETC.Models.Categorias>

@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Categorias</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear Nueva Categoria", "Create")
    </p>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NombreCate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Idcategoria }) |
                        @Html.ActionLink("Detalle", "Details", new { id = item.Idcategoria }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Idcategoria })
                    </td>
                </tr>
            }

</table><br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
   
</body>
</html>
